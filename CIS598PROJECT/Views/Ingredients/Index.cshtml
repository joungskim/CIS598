            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.User1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Name }) |
